<div class="row">
    <div class="col-md-6">
        <table>
            <tr>
                <td>
                    <select class "form-control" @bind="Day">
                            @for (int i = 1; i < 31; i++) { <option>@i</option>
                    }
                    </select>
                </td>
                <td>
                    <select class "form-control" @bind="Month">
                            @for (int i = 1; i < 12; i++) { <option value="@i">@Months[i-1]</option>
                    }
                    </select>
                </td>
                <td>
                    <select class "form-control" @bind="Day">
                            @for (int i = DateTime.Now.Year-100;i<DateTime.Now.Year+5;i++) { <option>@i</option>
                    }
                    </select>
                </td>
            </tr>
        </table>
    </div>
</div>

@code {
    public int Day { get; set; }
    public int Month {get; set; }
    public int Year {get; set; }

    public string[] Months { get; set; } =
        {
           "January",
           "Febuary",
           "March",
           "April",
           "May",
           "June",
           "July",
           "August",
           "September",
           "October",
           "November",
           "December"
        };
}
